<!DOCTYPE html>
<html>
<head>
  <title>Enterpriseape2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <ul class="nav nav-tabs">
      <li><%= link_to "Home", home_index_path %></li>
      <li><%= link_to "About", home_about_path %></li>
      <li><%= link_to "Features", home_features_path %></li>
      <li><%= link_to "Invoices", invoices_path %></li>

      <% if current_user %>
        <li><%= link_to "Logout", destroy_user_session_path, method: :delete %><li>
      <% else %>
        <li><%= link_to "Sign-in", user_session_path, method: :post %><li>
        <li><%= link_to "Sign-up", new_user_registration_path, method: :get %><li>
      <% end %>

    </ul>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
    </div>

</body>
</html>
